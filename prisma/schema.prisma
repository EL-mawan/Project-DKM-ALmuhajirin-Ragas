generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  permissions String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      String
  phone     String?
  address   String?
  avatar    String?
  isActive  Boolean    @default(true)
  roleId    String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  auditLogs AuditLog[]
  role      Role       @relation(fields: [roleId], references: [id])

  @@map("users")
}

model StrukturOrganisasi {
  id          String   @id @default(cuid())
  name        String
  position    String
  description String?
  image       String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("struktur_organisasi")
}

model JamaahKepalaKeluarga {
  id         String   @id @default(cuid())
  name       String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  blok       String
  keterangan String?
  nomor      String
  rt         String?
  rw         String?
  phone      String?

  @@map("jamaah_kepala_keluarga")
}

model JamaahRemaja {
  id        String    @id @default(cuid())
  name      String
  address   String
  phone     String?
  birthDate DateTime?
  education String?
  skills    String?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("jamaah_remaja")
}

model KaumDhuafa {
  id         String   @id @default(cuid())
  name       String
  type       String
  address    String?
  phone      String?
  nik        String?
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  keterangan String?
  nomor      String?

  @@map("kaum_dhuafa")
}

model Kegiatan {
  id          String    @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String?
  image       String?
  status      String    @default("pending")
  createdBy   String
  approvedBy  String?
  approvedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  category    String

  @@map("kegiatan")
}

model KeuanganPemasukan {
  id          String   @id @default(cuid())
  amount      Float
  source      String
  sourceUnit  String?
  qty         Float    @default(1)
  unitPrice   Float
  description String?
  date        DateTime
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("keuangan_pemasukan")
}

model KeuanganPengeluaran {
  id          String   @id @default(cuid())
  itemName    String
  amount      Float
  unitPrice   Float
  qty         Float    @default(1)
  unitType    String?
  category    String
  description String?
  date        DateTime
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("keuangan_pengeluaran")
}

model LaporanKeuangan {
  id           String    @id @default(cuid())
  title        String
  period       String
  startDate    DateTime
  endDate      DateTime
  totalIncome  Float
  totalExpense Float
  fileUrl      String?
  status       String    @default("pending")
  createdBy    String
  approvedBy   String?
  approvedAt   DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("laporan_keuangan")
}

model Berita {
  id         String    @id @default(cuid())
  title      String
  content    String
  image      String?
  status     String    @default("pending")
  createdBy  String
  approvedBy String?
  approvedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("berita")
}

model Galeri {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String
  type        String   @default("foto")
  category    String?
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("galeri")
}

model KontakMasuk {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("kontak_masuk")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  table     String?
  recordId  String?
  oldValues String?
  newValues String?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}

model HomepageContent {
  id          String   @id @default(cuid())
  section     String   @unique
  title       String?
  subtitle    String?
  description String?
  content     String?
  imageUrl    String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("homepage_content")
}

model DokumenResmi {
  id            String    @id @default(cuid())
  nomorSurat    String?
  type          String
  title         String
  date          DateTime
  content       String?
  recipient     String?
  location      String?
  status        String    @default("pending")
  fileUrl       String?
  createdBy     String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  rejectionNote String?
  validatedAt   DateTime?
  validatedBy   String?

  @@map("dokumen_resmi")
}
